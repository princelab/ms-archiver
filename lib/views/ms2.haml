#content
	- category = "ms2"
	- Ref_hash = { ms1_id_abund_at_ms2_acquisition: "MS1 ID abundance at MS2 Acquisition", ms2_id_abund_reported: "MS2 ID Abundance Reported", ms2_id_spectra: "MS2 ID Spectra", precursor_m_z_peptide_ion_m_z_2_charge_only_reject_0_45_m_z: "Precursor m/z - Peptide Ion m/z (+2 Charge only, Reject > 0.45 m/z)" }
	%h1 Testing this whole system out, I am	
	#overview
	- Dir.chdir('lib/public')
	- subcats = Dir.glob("#{category}/*/*.svg").map{|a| a.slice(/.*?\/(.*?)\/\w*?\.svg/,1)}.uniq.compact
	%ul
	- subcats.sort.each do |subcat|
		%li 
			=link_to("##{subcat}", subcat)
	#pictures
	- subcats.sort.each do |subcat|
		%h2{:id => subcat }= Ref_hash[subcat.to_sym]
		- @a = Dir.glob("#{category}/#{subcat}/*.svg")
		- @a.map do |a|
			=  img(a) 
		%p 

		= link_to("#overview", "Return to the top") 
